set -e +x
source $LIBDIR/zfs || return $?

[ -n "$izfs" ] || _getopt izfs
[ -n "$izfs" ] && arg "VDEV" "$izfs" "," "3" "-s"

eval set -- $(echo "$iresume" | sed -e 's/:/ /g')
FS="$3" RESU="$2" sign="$4" type="$1"

if [ -n "$VDEV" ] || [ "$FS" = "zfs" ]; then
	debug stk "$ikresume"
	debug -d dozfs "$RESU" "$VDEV" "-N" &&
	echo "RESU=$type:/dev/$RESU${sign:+$sign}" >>/run/env
fi

unset FS RESU sign type

#
# vim:fenc=utf-8:ft=sh:ci:pi:sts=0:sw=4:ts=4:
#
