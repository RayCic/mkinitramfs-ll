source ${LIBDIR:-/lib/mkiniramfs-ll}/functions || exit
[ -z "$bcache" ] && get_opt "bcache"

undobcahe() {
	echo $$ >/run/${0##*/}.pid
	local IFS=":$IFS" _dev _DEV

	for _dev in $bcache; do
		blk "$_dev" "_DEV"
		_dev=${_DEV##*/}
		echo 1 > /sys/block/${_dev:0:3}/$_dev/bcache/running
	done
	rm -f /run/${0##*/}.pid
}

[ -n "$bcache" ] && undobcache

