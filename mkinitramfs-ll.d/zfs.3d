# $Id: modules/zfs.3d,v 0.12.8 2014/07/02 14:48:11 -tclover Exp $

set -e +x
source $LIBDIR/zfs

_getopt "izfs"
[ -n "$izfs" ] &&
arg "VDEV" "$izfs" "," "1"
arg "FS" "$iroot" ":" "3" "-s"

if [ -n "$VDEV" ] || [ "$FS" = "zfs" ]; then
	arg "root" "$iroot" ":" "1"
	debug -d dozfs "$root" "$VDEV" &&
	echo "ROOT=$root" >>/run/env
fi

