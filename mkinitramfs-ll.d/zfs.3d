# $Id: mkinitramfs-ll.d/zfs.3d,v 0.12.3 2013/04/25 22:48:11 -tclover Exp $

set -e +x
source $MODDIR/zfs

arg "FS" "$iroot" "3" ":" "-s"
arg "VDEV" "$izfs" "1" ","

if [ -n "$VDEV" ] || [ "$FS" = "zfs" ]; then
	arg "root" "$iroot" "1" ":"
	debug -d dozfs "$root" "$VDEV" "-R /newroot" &&
	echo "ROOT=$root" >>/run/env
fi

