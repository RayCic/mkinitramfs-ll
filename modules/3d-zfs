# $Id: modules/zfs.3d,v 0.12.8 2014/07/03 13:45:11 -tclover Exp $

set -e +x
source $LIBDIR/zfs

_getopt "izfs"
[ -n "$izfs" ] &&
arg "VDEV" "$izfs" "," "1"
arg "FS" "$iroot" ":" "3" "-s"

if [ -n "$VDEV" ] || [ "$FS" = "zfs" ]; then
	arg "ROOT" "$iroot" ":" "1"
	debug -d dozfs "$ROOT" "$VDEV" &&
	echo "ROOT=$ROOT" >>/run/env
fi

# vim:fenc=utf-8:ft=sh:ci:pi:sts=0:sw=4:ts=4:
